<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Member">
	<insert id="insert" parameterType="mdto">
		insert into member_table(m_number,m_id, m_pw, m_name, m_date, m_phone, m_gender)
		values(#{m_number},#{m_id},#{m_pw},#{m_name},#{m_date},#{m_phone},#{m_gender})
	</insert>
	
	<select id="idDp" parameterType="String" resultType="String">
		select m_id
		from Member_table where m_id=#{m_id}
	</select>
	
	<select id="login" parameterType="mdto" resultType="mdto">
		select * from member_table where m_id=#{m_id} and m_pw=#{m_pw}
	</select>
	
	<select id="findAll" resultType="mdto">
		select * from member_table
	</select>
	
	<select id="delete" parameterType="long">
		delete from member_table where m_number=#{m_number}
	</select>
	
	<select id="pagingList1" parameterType="java.util.HashMap" resultType="mdto">
 		select * from member_table order by m_number desc limit #{start}, #{limit}
 	</select>
 	
 	<select id="count" resultType="int">
 		select count(m_number) from member_table
 	</select>
 	
 	<select id="mypage" parameterType="long" resultType="mdto">
 		select * from member_table where m_number=#{m_number}
 	</select>
 	
 	<select id="pwcheck" parameterType="long" resultType="mdto">
 		select * from member_table where m_number=#{m_number}
 	</select>
 	
 	<update id="update" parameterType="mdto">
 		update member_table set m_pw=#{m_pw}, m_phone=#{m_phone} where m_number=#{m_number}
 	</update>
 	
 	<select id="reservation" parameterType="long" resultType="mdto">
 		select * from member_table where m_number=#{m_number}
 	</select>
</mapper>